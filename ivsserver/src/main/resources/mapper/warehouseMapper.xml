<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.ivsserver.mapper.warehouseMapper">

    <insert id="addClient" parameterType="com.example.ivsserver.entity.warehouse">
        insert into warehouse(goods_id, name, quantity)
            value (#{goods_id},#{name},#{quantity})
    </insert>

    <delete id="deleteClient" parameterType="String">
        delete from warehouse where goods_id = #{goods_id}
    </delete>

    <update id="updateClient" parameterType="com.example.ivsserver.entity.warehouse">
        update warehouse
        set name = #{name},
            quantity = #{quantity}
        where goods_id = #{goods_id}
    </update>

    <select id="selectClient" parameterType="String" resultType="com.example.ivsserver.entity.warehouse">
        select *
        from warehouse
        where name = #{name}
    </select>

    <select id="getInfoClient"  resultType="com.example.ivsserver.entity.warehouse">
        select * from warehouse
    </select>

</mapper>